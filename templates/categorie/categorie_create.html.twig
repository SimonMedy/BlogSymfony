{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!
{% endblock %}

{% block body %}
<div class="container ms-4 mt-4">
	<div class="d-flex flex-nowrap">
		{{form_start(form)}}
		<div class="mt-2">
			<h5 class="text-primary" style="font-weight:bold">📝{{'ajouter_categorie'|trans}}</h5>
			{{form_errors(form)}}

			<div class="mt-2">
				{{form_label(form.titre)}}<text class="text-primary">*</text><br>
				{{form_widget(form.titre)}}
			</div>

			<div class="mt-3">
				{{form_widget(form.submit, { 'label': 'Enregistrer' }) }}
			</div>
		</div>
		{{form_end(form)}}
	</div>
</div>
{% endblock %}