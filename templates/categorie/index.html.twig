{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!
{% endblock %}

{% block body %}
	<div class="container ms-4 mt-4">
		<div class="mt-4">
			<table class="table table-hover">
				<thead>
					<tr class="table-primary">
						<th scope="col">ID</th>
						<th scope="col">Titre</th>
					</tr>
				</thead>
				<tbody>
					{% for categorie in categories %}
						<tr class="table-secondary">
							<th scope="row">
								<a href="{{path("categorie",{id:categorie.id})}}" style="text-decoration: none">{{categorie.id}}</a>
							</th>
							<td>{{categorie.titre}}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
