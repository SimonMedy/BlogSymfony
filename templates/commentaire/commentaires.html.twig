{% extends 'base.html.twig' %}

{% block title %}Hello CommentaireController!
{% endblock %}

{% block body %}
	<div class="container ms-4 mt-4">
		{% if articles is empty %}
			<h5 class="text-warning" style="font-size:1.2rem; font-style:italic">‚ö†Ô∏è{{'aucun_articles'|trans}}</h5>
			<div class=" mt-3">
				<a class="btn btn-outline-warning" href="{{path('article_create')}}">{{'creer_article'|trans}}</a>
			</div>
		{% else %}
			{{form_start(form)}}
			<div class="mt-2">
				<h5 class="text-primary" style="font-weight:bold">üìù{{'ajouter_commentaire'|trans}}</h5>
				{{form_errors(form)}}

				<div class="mt-2">
					{{form_label(form.commentaire)}}<text class="text-primary">*</text><br>
					{{form_widget(form.commentaire)}}
				</div>

				<div class="mt-2">
					{{form_label(form.article)}}<text class="text-primary">*</text><br>
					{{form_widget(form.article)}}
				</div>

				<div class="mt-2">
					{{form_label(form.etat)}}<text class="text-primary">*</text><br>
					{{form_widget(form.etat)}}
				</div>

				<div class="mt-3">
					{{form_widget(form.submit, { 'label': 'Enregistrer' }) }}
				</div>
			</div>
			{{form_end(form)}}
		{% endif %}
	</div>
{% endblock %}
